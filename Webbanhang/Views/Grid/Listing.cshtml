@{
    ViewBag.Title = "Listing";
}
<header class="section-header">
    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-3 col-md-12">
                    <a href="@Url.Action("Index","Home", new {})" class="brand-wrap">
                        <img class="logo" src="~/Content/images/logo.png">
                    </a> <!-- brand-wrap.// -->

                </div>
                <div class="col-xl-6 col-lg-5 col-md-6">
                    <form action="#" class="search-header">
                        <div class="input-group w-100">
                            <select class="custom-select border-right" name="category_name">
                                <option value="">Kiểu sản phẩm</option>
                                <option value="codex">Đặc biệt</option>
                                <option value="comments">Chỉ có một sản phẩm</option>
                                <option value="content">Sản phẩm cuối</option>
                            </select>
                            <input type="text" class="form-control" placeholder="Tìm kiếm">

                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i> Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </form> <!-- search-wrap .end// -->
                </div> <!-- col.// -->
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="widgets-wrap float-md-right">
                        <div class="widget-header mr-3">
                            <a href="@Url.Action("Login","Home", new {})" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-user"></i>
                                </div>


                                @if (Session["idUser"] != null)
                                {
                                    <small class="text">
                                        <a href="~/Admin/Product/Index">Trang Admin </a>
                                    </small>
                                    <a href="~/Home/Logout">Đăng Xuất </a>

                                }
                                else
                                {
                                    <small class="text">
                                        <a href="~/Home/Login">Đăng Nhập</a>
                                    </small>
                                }

                        </div>

                        <div class="widget-header mr-3">
                            <a href="@Url.Action("Register","Home", new {})" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-user"></i>
                                </div>
                                <small class="text">@Html.ActionLink("Đăng Ký", "Register", "Home", new { }, null) </small>
                            </a>
                        </div>
                        <div class="widget-header mr-3">
                            <a href="@Url.Action("Listing","Grid", new {})" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-store"></i>
                                </div>
                                <small class="text"> @Html.ActionLink("Đặt hàng", "Listing", "Grid", new { }, null) </small>
                            </a>
                        </div>
                        <div class="widget-header">
                            <a href="@Url.Action("Index","Cart", new {})" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span class="notify" id="CartCount">@Session["count"]</span>
                                </div>
                                <small class="text">@Html.ActionLink("Giỏ hàng", "Index", "Cart", new { }, null)</small>
                            </a>
                        </div>
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->


    <nav class="navbar navbar-main navbar-expand-lg border-bottom">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">

                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Trang cần tìm</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" @Html.ActionLink("Trang chủ", "Index", "Home")</a>
                            <a class="dropdown-item" @Html.ActionLink("Tất cả danh mục", "Index", "Category")</a>
                            <a class="dropdown-item" @Html.ActionLink("Danh sách liệt kê", "Listing", "Large")</a>
                            <a class="dropdown-item" @Html.ActionLink("Danh sách lưới", "Listing", "Grid")</a>
                            <a class="dropdown-item" @Html.ActionLink("Giỏ hàng", "Index", "Category")</a>
                            <a class="dropdown-item" @Html.ActionLink("Trang Đăng Nhập", "Login", "Home")</a>
                            <a class="dropdown-item" @Html.ActionLink("Trang Đăng Ký", "Register", "Home")</a>

                        </div>
                    </li>
                </ul>

            </div> <!-- collapse .// -->
        </div> <!-- container .// -->
    </nav>
</header><!-- section-header.// -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                <strong class="mr-md-auto">32 Items found </strong>
                
               
            </div>
        </header><!-- sect-heading -->

        <div class="row">

           
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                            <span class="badge badge-danger"> Mới </span>
                            <img src="~/Content/images/items/2.jpg">
                        </div> <!-- img-wrap.// -->
                        <figcaption class="info-wrap">
                            <a href="#" class="title mb-2">Quần áo demo giá rẻ và tốt nhất với phong cách thời trang mới nhất dành cho nam giới</a>
                            <div class="price-wrap">
                                <span class="price">600000</span>
                                <small class="text-muted"></small>
                            </div> <!-- price-wrap.// -->

                            <p class="mb-2"> <small class="text-muted"></small></p>

                            <p class="text-muted ">Apple Inc</p>

                            <hr>

                            <p class="mb-3">
                                <span class="tag"> <i class="fa fa-check"></i></span>
                                <span class="tag">  </span>
                                <span class="tag">  </span>
                                <span class="tag">   </span>
                            </p>

                            <label class="custom-control mb-3 custom-checkbox">
                                <input type="checkbox" class="custom-control-input">
                                
                            </label>

                        </figcaption>
                    </figure>
                </div> <!-- col.// -->
            
          
        </div> <!-- row end.// -->


        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
               
            </ul>
        </nav>


        <div class="box text-center">
            <p>Bạn đã tìm thấy những gì bạn đang tìm kiếm?</p>
            <a href="" class="btn btn-light">Có</a>
            <a href="" class="btn btn-light">Không</a>
        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<!-- ========================= SECTION SUBSCRIBE  ========================= -->
<section class="padding-y-lg bg-light border-top">
    <div class="container">

        <p class="pb-2 text-center">Cung cấp các xu hướng sản phẩm mới nhất và tin tức ngành trực tiếp vào hộp thư đến của bạn</p>

        <div class="row justify-content-md-center">
            <div class="col-lg-4 col-sm-6">
                <form class="form-row">
                    <div class="col-8">
                        <input class="form-control" placeholder="Email của bạn" type="email">
                    </div> <!-- col.// -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Đăng ký </button>
                    </div> <!-- col.// -->
                </form>
                <small class="form-text">Chúng tôi sẽ không bao giờ chia sẻ địa chỉ email của bạn với bên thứ ba. </small>
            </div> <!-- col-md-6.// -->
        </div>


    </div>
</section>
<!-- ========================= SECTION SUBSCRIBE END// ========================= -->
